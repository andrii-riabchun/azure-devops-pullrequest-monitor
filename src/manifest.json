{
  "name": "Azure DevOps Pull Request Monitor",
  "version": "0.5",
  "description": "Monitor pull request updates for selected Azure DevOps organizations",
  "manifest_version": 2,
  "browser_action": {
    "browser_style": true,
    "chrome_style": true,
    "default_icon": "assets/button.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_ui":{
    "page": "options.html"
  },
  "icons": {
    "48": "assets/button.png"
  },
  "content_scripts": [{
    "all_frames": true,
    "matches": ["https://dev.azure.com/*/_pulls"],
    "js": ["contentScript.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "https://dev.azure.com/*/_pulls", 
    "webRequest", 
    "webRequestBlocking",
    "alarms",
    "storage"
  ]
}